<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="211dp"
        android:layout_height="43dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:enabled="false"
        android:gravity="end"
        android:inputType="numberDecimal"
        android:text="0.0"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@+id/button_second"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_rhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:gravity="end"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:textAlignment="textEnd"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="@+id/input_lhs" />

    <EditText
        android:id="@+id/input_lhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="end"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:textAlignment="textEnd"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/input_rhs"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_compute"
        android:layout_width="111dp"
        android:layout_height="44dp"
        android:text="Compute"
        app:layout_constraintBottom_toTopOf="@+id/button_second"
        app:layout_constraintEnd_toStartOf="@+id/result"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_rhs"
        app:layout_constraintVertical_bias="0.709" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="307dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Compute Addtion of Two Numbers"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>